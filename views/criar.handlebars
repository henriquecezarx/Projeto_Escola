}

#input_password{
    margin-left: 85px;
    margin-top: 20px;
    width: 300px;
    height: 55px;
}

#input_email{
    margin-left: 85px;
    margin-top: 20px;
    width: 300px;
    height: 55px;
}

#input_name{
    margin-left: 85px;
    margin-top: 20px;
    width: 300px;
    height: 55px;
}

#portal{
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: 20pt;
    color: white;
    display: flex;
    justify-content: center; /* Centraliza horizontalmente */
    align-items: center;
    margin-top: 25px;
    letter-spacing: 3px;
    margin-left: 15px;
}

#botao{
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
