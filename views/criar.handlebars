    width: 320px;
    text-align: center;
    letter-spacing: 1px;
}

#container {
    display: flex;
    justify-content: center; /* Centraliza horizontalmente */
    align-items: center; /* Centraliza verticalmente */
    width: 100vw; /* 100% da largura da janela do navegador */
