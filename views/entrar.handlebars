<style>

body{

    background-image: url("/img/estudo_fundo.jpg");
    background-size: cover;
    overflow-x: hidden;
    overflow-y: hidden;

}

#container {
    display: flex;
    justify-content: center; /* Centraliza horizontalmente */
    align-items: center; /* Centraliza verticalmente */
    width: 100vw; /* 100% da largura da janela do navegador */
    height: 100vh; /* 100% da altura da janela do navegador */
}

#fundo {
    width: 450px;
    height: 450px;
    background-color: rgb(43, 154, 206, 0.9);
}

#input_username{
    margin-left: 85px;
    margin-top: 20px;
    width: 300px;
    height: 55px;
}

#input_password{
    margin-left: 85px;
    margin-top: 20px;
    width: 300px;
    height: 55px;
}

#portal{
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: 20pt;
    color: white;
    display: flex;
    justify-content: center; /* Centraliza horizontalmente */
    align-items: center;
    margin-top: 25px;
    letter-spacing: 3px;
    margin-left: 15px;
}

#botao{
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: 16pt;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 300px;
    height: 50px;
    margin-left: 85px;
}

#esquece_senha{
    color: white;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: 14pt;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 300px;
    height: 50px;
    margin-left: 85px;
    margin-top: 20px;
}

#criar_conta{
    color: white;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    font-size: 14pt;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 300px;
    height: 50px;
    margin-left: 85px;
    margin-top: 15px;
}

#success{
    width: 350px;
    justify-content: center;
    align-items: center;
    margin-left: 540px;
    margin-bottom: -135px;
    margin-top: 80px;
    display: flex;
    letter-spacing: 1px;
}

#erros{
    width: 350px;
    justify-content: center;
    align-items: center;
    margin-left: 540px;
    margin-bottom: -138px;
    margin-top: 75px;
    display: flex;
    letter-spacing: 1px;
}

</style>

{{#if success_msg}}
        <div class="alert alert-success" id="success">
            Usuário Cadastrado com Sucesso!
        </div>
    {{/if}}

{{#if message}}
    <div class="alert alert-danger" id="erros">
        {{message}}
    </div>
{{/if}}

<form action="/entrar" method="POST">
    <div id="container">
        <div id="fundo">
            <span id="portal">PORTAL DO ALUNO</span>
